{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Item Manifest",
  "type": "object",
  "properties": {
    "items": {
      "description": "A map from item identifiers to their definition.",
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "stack_size": {
            "type": "number",
            "min": 0
          }
        },
        "required": ["stack_size"]
      }
    }
  },
  "required": ["items"]
}
