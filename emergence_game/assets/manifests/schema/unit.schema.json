{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.leafwing-studios.com/Emergence/items",
  "title": "Unit Manifest",
  "type": "object",
  "properties": {
    "items": {
      "description": "A map from unit types to their definition.",
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "max_impatience": {
            "type": "number",
            "min": 0,
            "max": 255
          }
        },
        "required": [
          "stack_size"
        ]
      }
    }
  },
  "required": [
    "terrain_types"
  ]
}